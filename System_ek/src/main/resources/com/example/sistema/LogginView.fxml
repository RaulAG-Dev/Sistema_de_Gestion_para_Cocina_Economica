<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema.controllers.ControladorLogin">

    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="480.0" prefWidth="400.0" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 45;">

        <effect>
            <DropShadow blurType="GAUSSIAN" height="20.0" radius="9.5" width="20.0">
                <color>
                    <Color opacity="0.15" />
                </color>
            </DropShadow>
        </effect>

        <Label text="Bienvenido" textFill="#333333">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Label text="Sistema de Cocina Económica" textFill="#757575">
            <font>
                <Font size="15.0" />
            </font>
            <VBox.margin>
                <Insets top="-20.0" />
            </VBox.margin>
        </Label>

        <VBox spacing="18.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>

            <TextField fx:id="usuarioField" promptText="Usuario" style="-fx-background-color: #f1f3f4; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />

            <PasswordField fx:id="passField" promptText="Contraseña" style="-fx-background-color: #f1f3f4; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" />
        </VBox>

        <Button fx:id="loginButton" defaultButton="true" maxWidth="1.7976931348623157E308" onAction="#manejarLogin" style="-fx-background-color: #4FC3F7; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-font-size: 15px; -fx-cursor: hand;" text="INICIAR SESIÓN">
            <padding>
                <Insets bottom="12.0" top="12.0" />
            </padding>
        </Button>

        <Label fx:id="mensajeError" style="-fx-text-fill: #ff1744; -fx-font-size: 12px;" wrapText="true" />

    </VBox>
</StackPane>