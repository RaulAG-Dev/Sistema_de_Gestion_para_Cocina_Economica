        <Label layoutX="31.0" layoutY="57.0" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Corte de caja:" />

        <TableView fx:id="ventasTable" layoutX="45.0" layoutY="158.0" prefHeight="384.0" prefWidth="570.0">
            <columns>
                <TableColumn fx:id="numVentaColumn" prefWidth="75.0" text="N. venta" />
                <TableColumn fx:id="detalleVentaColumn" prefWidth="350.4" text="VENTAS" />
                <TableColumn fx:id="totalVentaColumn" prefWidth="144.0" text="Total " />
