        <Separator layoutX="631.0" layoutY="99.0" orientation="VERTICAL" prefHeight="519.0" prefWidth="46.0" />

        <Label layoutX="754.0" layoutY="369.0" style="-fx-font-size: 15; -fx-font-weight: bold;" text="Notas:" />
        <TextArea fx:id="notasArea" layoutX="684.0" layoutY="398.0" prefHeight="200.0" prefWidth="200.0" />
    </children>
</AnchorPane>
