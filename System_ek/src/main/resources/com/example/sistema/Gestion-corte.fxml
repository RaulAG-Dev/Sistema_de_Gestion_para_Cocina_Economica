        <DatePicker fx:id="fechaCortePicker" layoutX="689.0" layoutY="225.0" />

        <Button fx:id="guardarButton" layoutX="746.0" layoutY="277.0" mnemonicParsing="false" onAction="#guardarCorte" text="Guardar" />
