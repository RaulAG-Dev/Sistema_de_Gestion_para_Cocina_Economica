<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #F4F6F8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema.controllers.ControladorPrincipal">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <Label text=" Cocina EK" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>

            <Separator orientation="VERTICAL" />
            <Button onAction="#gestionarClientes" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-border-color: white; -fx-border-radius: 5;" text="Clientes">
            <font>
               <Font size="13.0" />
            </font></Button>
            <Button onAction="#verHistorialVentas" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-border-color: white; -fx-border-radius: 5;" text="Historial de ventas">
            <font>
               <Font size="13.0" />
            </font></Button>
            <Button onAction="#gestionarInventario" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 5; -fx-border-color: white;" text="Inventario">
            <font>
               <Font size="13.0" />
            </font></Button>

            <Button onAction="#gestionarVentas" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-cursor: hand;" text="Corte de caja">
            <font>
               <Font size="13.0" />
            </font></Button>
         <Button onAction="#abrirVentanaReportes" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-cursor: hand; -fx-border-color: white; -fx-border-radius: 5;" text="Gestión de ventas">
            <font>
               <Font size="13.0" />
            </font>
         </Button>

            <padding>
                <Insets left="20" right="20" />
            </padding>
        </HBox>
    </top>

    <center>
        <HBox spacing="25" style="-fx-padding: 25;" BorderPane.alignment="CENTER">

            <VBox spacing="15" HBox.hgrow="ALWAYS">

                <HBox alignment="CENTER_LEFT" prefWidth="742.0" spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Menú de" />
                    <ChoiceBox fx:id="selectorMenu" prefWidth="200" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5;" />

                    <Region HBox.hgrow="ALWAYS" />

                    <Button fx:id="añadirPlatilloButton" onAction="#abrirVentanaPlatillo" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="➕ Nuevo platillo">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Button>
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                    <GridPane fx:id="menuGrid" alignment="TOP_LEFT" hgap="20" vgap="20">
                        <padding>
                            <Insets bottom="10" left="5" right="5" top="5" />
                        </padding>
                    </GridPane>
                </ScrollPane>
            </VBox> <Region HBox.hgrow="ALWAYS" />

            <VBox prefWidth="420.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">

                <effect>
                    <DropShadow blurType="GAUSSIAN" color="#0000001a" height="20.0" radius="9.5" width="20.0" />
                </effect>

                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Nueva orden" />
                <Separator />

                <VBox spacing="5">
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Cliente" />
                    <TextField fx:id="nombreClienteField" promptText="Nombre del cliente" style="-fx-background-color: #F4F6F8; -fx-background-radius: 5; -fx-padding: 10;" />
                </VBox>

                <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Detalle" />

                <TableView fx:id="pedidoTable" editable="true" prefHeight="272.0" prefWidth="304.0" style="-fx-background-color: transparent; -fx-border-color: #ecf0f1;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nombreColumn" prefWidth="140" text="Platillo" />
                        <TableColumn fx:id="cantidadColumn" prefWidth="50" style="-fx-alignment: CENTER;" text="Cant." />
                        <TableColumn fx:id="precioColumn" prefWidth="70" style="-fx-alignment: CENTER-RIGHT;" text="Precio" />
                        <TableColumn fx:id="subtotalColumn" prefWidth="70" style="-fx-alignment: CENTER-RIGHT;" text="Total" />
                        <TableColumn fx:id="accionesColumn" prefWidth="40" text="" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Total:" />
                        <Label fx:id="totalPagarLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="\$0.00" />
                    </HBox>

                    <Button maxWidth="Infinity" onAction="#confirmarPedido" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" text="CONFIRMAR" />
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
