<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="322.0" prefWidth="483.0" spacing="10" style="-fx-padding: 25;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema.controllers.ControladorLogin">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Inicio de Sesión" />

    <TextField fx:id="usuarioField" maxWidth="200" promptText="Usuario" />

    <PasswordField fx:id="passField" maxWidth="200" promptText="Contraseña" />

    <Button fx:id="loginButton" defaultButton="true" onAction="#manejarLogin" text="Entrar" />

    <Label fx:id="mensajeError" style="-fx-text-fill: red;" />

</VBox>
