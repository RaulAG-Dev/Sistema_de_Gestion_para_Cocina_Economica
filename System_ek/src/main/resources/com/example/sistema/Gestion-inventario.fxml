<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #F4F6F8;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema.controllers.ControladorInventario">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <Button fx:id="regresarButton" onAction="#manejarRegreso" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5; -fx-cursor: hand;" text="← Regresar" />

            <Label text="Gestión de Inventario" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Existencias en Almacén" />

            <TableView fx:id="inventarioTable" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="nombreColumn" prefWidth="250" text="Ingrediente" />
                    <TableColumn fx:id="stockActualColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="Stock Actual" />
                    <TableColumn fx:id="stockMinimoColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="Stock Mínimo" />
                    <TableColumn fx:id="unidadColumn" prefWidth="100" style="-fx-alignment: CENTER;" text="Unidad" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <right>
        <VBox prefWidth="350" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), -5, 0, 0, 0);" BorderPane.alignment="CENTER">

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #e67e22;"  />
                <TextArea fx:id="notificacionesArea" editable="false" prefHeight="120.0" promptText="Sin alertas pendientes." style="-fx-background-color: #fff3e0; -fx-border-color: #ffe0b2;" wrapText="true" />
            </VBox>

            <Separator />

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Datos del Ingrediente" />

            <VBox spacing="10">
                <Label text="Nombre:" textFill="#555555" />
                <TextField fx:id="nombreField" promptText="Ingresar nombre del ingrediente" style="-fx-background-radius: 5; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 5;" />

                <HBox spacing="10">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Stock Actual:" textFill="#555555" />
                        <TextField fx:id="stockField" promptText="0" style="-fx-background-radius: 5; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 5;" />
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Stock Mínimo:" textFill="#555555" />
                        <TextField fx:id="minimoField" promptText="0" style="-fx-background-radius: 5; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 5;" />
                    </VBox>
                </HBox>

                <Label text="Unidad de Medida:" textFill="#555555" />
                <TextField fx:id="unidadField" promptText="Ej. kg, lts, pza" style="-fx-background-radius: 5; -fx-padding: 8; -fx-border-color: #ccc; -fx-border-radius: 5;" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" /> <VBox spacing="10">
            <HBox spacing="10">
                <Button fx:id="agregarButton" maxWidth="Infinity" onAction="#agregarIngrediente" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Agregar Nuevo" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding></Button>
                <Button fx:id="guardarButton" maxWidth="Infinity" onAction="#guardarIngrediente" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Guardar Cambios" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding></Button>
            </HBox>

            <Button fx:id="eliminarButton" maxWidth="Infinity" onAction="#eliminarIngrediente" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Eliminar Seleccionado">
                <padding>
                    <Insets bottom="10.0" top="10.0" />
                </padding></Button>
        </VBox>

        </VBox>
    </right>

</BorderPane>