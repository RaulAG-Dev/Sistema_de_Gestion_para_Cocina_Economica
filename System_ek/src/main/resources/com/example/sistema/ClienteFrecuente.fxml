<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="550.0" spacing="15.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema.controllers.ControladorClientesFrecuentes">
     <Button onAction="#manejarCierre" text="Regresar" />
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Clientes frecuentes" />

    <TableView fx:id="frecuentesTable" prefHeight="450.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="rankingColumn" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="Nº" />
            <TableColumn fx:id="nombreColumn" prefWidth="250.0" text="Nombre" />
            <TableColumn fx:id="telefonoColumn" prefWidth="120.0" text="Teléfono" />
            <TableColumn fx:id="pedidosColumn" prefWidth="80.0" text="Cant. pedidos" />
        </columns>
    </TableView>

    <Label fx:id="notaLabel" style="-fx-text-fill: #666666;" text="* Ordenados por la cantidad de pedidos realizados." />

    <HBox alignment="CENTER_RIGHT" />
</VBox>
