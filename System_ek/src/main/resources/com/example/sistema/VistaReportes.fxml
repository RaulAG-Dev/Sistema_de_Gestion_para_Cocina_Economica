<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema.controllers.ControladorReportes">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" prefHeight="680.0" prefWidth="980.0" spacing="15.0">
            <Label alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Generación de reportes de ventas" translateX="30.0" translateY="40.0" />

            <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="25.0" prefWidth="775.0" spacing="10.0">
                <Button onAction="#generarReporteMensual" text="Ventas Mensuales" />
                <Button onAction="#generarReporteSemanal" text="Ventas Semanales" />
                <Button onAction="#generarReporteHoy" text="Ventas de Hoy" />
                <Label text="Reportes Rápidos: " />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Personalizado: " />
                <DatePicker fx:id="dpFechaInicio" promptText="Fecha de Inicio" />
                <Label text=" a " />
                <DatePicker fx:id="dpFechaFin" promptText="Fecha de Fin" />
                <Button onAction="#generarReportePersonalizado" style="-fx-base: #5cb85c; -fx-text-fill: white;" text="Generar" />
            </HBox>

            <Label fx:id="labelTotalVentas" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Total de Ventas: $0.00" />

            <TableView fx:id="tablaReportes" prefHeight="492.0" prefWidth="930.0">
                <columns>
                    <TableColumn fx:id="colFecha" prefWidth="150.0" text="Fecha y Hora" />
                    <TableColumn fx:id="colNombre" prefWidth="350.0" text="Descripción del Pedido" />
                    <TableColumn fx:id="colTotal" prefWidth="150.0" text="Monto Total" />
                </columns>
            </TableView>
        </VBox>
        <Button fx:id="regresarButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#manejarRegreso" text="Regresar" />
    </children>
</AnchorPane>
